<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#E3E3E6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:id="@+id/zsxm_fanhui_ll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/fanhui"
                android:layout_width="30dp"
                android:layout_height="25dp" />
            <TextView
                android:text="返回"
                android:textColor="#E03223"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textColor="#000000"
            android:text="招商项目"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/zsxm_img_banner"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="0.45"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="项目介绍"
            android:textColor="#E03223"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:id="@+id/zsxm_content_sl"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:id="@+id/zsxm_content_tv"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/zsxm_name_tv"
            android:textSize="20sp"
            android:text="测试"
            android:textColor="#E03223"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <GridView
            android:id="@+id/zsxm_banner_gv"
            android:layout_marginTop="8dp"
            android:columnWidth="100dp"
            android:numColumns="4"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridView>
    </LinearLayout>
</LinearLayout>